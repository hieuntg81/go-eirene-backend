# Server Configuration
SERVER_PORT=8082
SERVER_ENV=development

# Database Configuration (PostgreSQL with PostGIS)
DB_HOST=localhost
DB_PORT=25432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=rescue_app
DB_SSL_MODE=disable
DB_AUTO_MIGRATE=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m

# S3 Configuration (for Memory Processing feature)
# Works with AWS S3 and S3-compatible services (MinIO, Azure Blob, GCP Cloud Storage)
S3_REGION=us-east-1
S3_BUCKET=byterover-memory-processing
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
# S3_ENDPOINT is optional. Leave empty for AWS S3, or set for S3-compatible services:
# - MinIO:              http://localhost:9000 or https://minio.example.com
# - Azure Blob Storage: https://myaccount.blob.core.windows.net
# - GCP Cloud Storage:  https://storage.googleapis.com
# - Custom S3:          https://s3.custom-provider.com
S3_ENDPOINT=http://localhost:9002
# S3_USE_PATH_STYLE controls URL format:
# - false (default): Virtual-hosted style for AWS S3: https://bucket.s3.amazonaws.com/key
# - true: Path style for MinIO and some providers: http://endpoint/bucket/key
S3_USE_PATH_STYLE=true

# Firebase Cloud Messaging (Optional - push notifications disabled if empty)
FCM_CREDENTIALS_FILE=

# Nominatim Geocoding (Optional - uses OSM public instance if empty)
NOMINATIM_URL=https://nominatim.openstreetmap.org

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8082
